<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        title tweeter
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css")
    body(ng-app="app")
        .container(ng-controller="PostsCtrl")
            h1 Node Tweeets
            form(role="form")
                <!-- h3 #{dev.name} -->
                .form-group
                    .input-group
                        .form-control(ng-model="postBody")
                        .input-group-btn
                            .btn.btn-default(ng-click="addPost()")
                                add Post
            ul.list-group
                li.list-group-item(ng-repeat="post in posts | orderBy: '-date'")
                    strong @{{post.username}}
                    span {{post.body}}
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.18/angular.js')
    script(src="/javascript/app.js")
